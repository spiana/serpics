<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xmlns:context="http://www.springframework.org/schema/context"
xsi:schemaLocation="http://www.springframework.org/schema/beans 
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
    <bean name="SessionManager" class="com.serpics.core.session.ContextSessionManager" />
    <bean name="CommerceEngine" class="com.serpics.core.CommerceEngineImpl"  />
     
     <bean class="org.springframework.beans.factory.config.CustomScopeConfigurer">
    <property name="scopes">
        <map>
            <entry key="commercesession">
                <bean class="com.serpics.core.scope.CommerceSessionScope"/>
            </entry>
        </map>
    </property>
</bean>

 </beans>    