<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xmlns:context="http://www.springframework.org/schema/context"
xsi:schemaLocation="http://www.springframework.org/schema/beans 
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
    <bean name="sessionManager" class="com.serpics.core.session.ContextSessionManager" />
    <bean name="commerceEngine" class="com.serpics.core.CommerceEngineImpl"  lazy-init="true"/>
     <bean name="postprocessor" class="com.serpics.core.SerpicsPostProcessor"/>
      <bean name="hookScanner" class="com.serpics.config.HookScannerPostProcessor"/>
     <!-- 
     <bean name="storescope" class="com.serpics.core.scope.StoreScope">
    	 <property name="commerceEngine" ref="CommerceEngine"/>
     </bean>
     -->
     
     <bean class="org.springframework.beans.factory.config.CustomScopeConfigurer">
    <property name="scopes">
        <map>
            <entry key="commercesession">
                <bean class="com.serpics.core.scope.CommerceSessionScope"/>
            </entry>
            <entry key="store">
           <bean class="com.serpics.core.scope.StoreScope"/>
            </entry>
        </map>
    </property>
</bean>

 </beans>    

