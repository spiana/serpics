<?xml version="1.0" encoding="UTF-8"?>
<smc-definition xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="" xsi:schemaLocation="xmc.xsd">

	<entity name="usersreg">
		<table action="append">
			<display>
				<property name="firstname" />
				<property name="lastname" />
				<property name="created" />
			</display>
			<search>
				<property name="firstname" />
				<property name="lastname" />
				<property name="created" />
			</search>
		</table>
		<editor>
			<display>
				<property name="firstname" />
				<property name="lastname" />
				<property name="phone" />
				<property name="email" />
				<property name="primaryAddress" />
				<property name="created" />
			</display>
			<readonly>
				<property name="created" />
			</readonly>
		</editor>
		<select>
			<property name="logonid" />
		</select>
	</entity>
	<entity name="primaryAddress">
		<table>
			<display>
				<property name="firstname" />
				<property name="lastname" />
				<property name="company" />
				<property name="address1" />
				<property name="zipcode" />
				<property name="city" />
			</display>
			<search>
				<property name="firstname" />
				<property name="lastname" />
			</search>
		</table>
		<editor>
			<display>
				<property name="firstname" />
				<property name="lastname" />
				<property name="company" />
				<property name="vatcode" />
				<property name="address1" />
				<property name="zipcode" />
				<property name="city" />
				<property name="email" />
				<property name="mobile" />
				<property name="phone" />
				<property name="fax" />
				<property name="created" />
				<property name="updated" />
			</display>
			<readonly action="append">
				<property name="created" />
				<property name="updated" />
			</readonly>
		</editor>

	</entity>
	<entity name="membergroup">
		<select>
			<property name="name" />
		</select>
	</entity>
	<entity name="country">
		<table>
			<display>
				<property name="geocode.code" />
				<property name="description" />
			</display>
			<search>
				<property name="geocode" />
			</search>
		</table>
		<editor>
			<display>
				<property name="geocode.code" />
				<property name="description" />
				<property name="iso2Code" />
				<property name="iso3Code" />
				<!-- <property name="regions"/> -->
			</display>

			<readonly action="append">
				<property name="created" />
				<property name="updated" />
			</readonly>
		</editor>

	</entity>

</smc-definition>
