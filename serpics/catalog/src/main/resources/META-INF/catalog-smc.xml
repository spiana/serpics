<?xml version="1.0" encoding="UTF-8"?>
<smc-definition xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="" xsi:schemaLocation="xmc.xsd">

	<entity name="brand">
		<table action="append">
			<display>
				<property name="code" />
				<property name="name" />
				<property name="logoSrc" />
			</display>
			<search>
				<property name="name" />
			</search>
		</table>
		<editor>
			<display>
				<property name="code" />
				<property name="name" />
				<property name="logoSrc" />
				<property name="created" />
			</display>
			<readonly>
				<property name="created" />
			</readonly>
		</editor>
		<select>
			<property name="code" />
		</select>
	</entity>
	
	<entity name="product">
		<table>
			<search>
				<property name="code"/>
				<property name="name"/>
<!-- 				<property name="description"/> -->
			</search>
		</table>
	</entity>
	
	<entity name="category">
		<table>
			<search>
				<property name="code"/>
				<property name="name"/>
<!-- 				<property name="description"/> -->
			</search>
		</table>
	</entity>
	
	<entity name="featuregroup">
		<table action="append">
			<display>
				<property name="code" />
				<property name="name" />
				<property name="description" />
				<property name="sequence" />
			</display>
			<search>
				<property name="code" />
			</search>
		</table>
		<editor>
			<display>
				<property name="code" />
				<property name="description" />
				<property name="name" />
				<property name="features" />
				<property name="sequence" />
				<property name="created" />
			</display>
			<readonly>
				<property name="created" />
			</readonly>
		</editor>
		<select>
			<property name="code" />
		</select>
	</entity>
	
	<entity name="featuremodel">
		<table action="append">
			<display>
				<property name="code" />
				<property name="description" />
			</display>
			<search>
				<property name="code" />
			</search>
		</table>
		<editor>
			<display>
				<property name="code" />
				<property name="description" />
				<property name="featureGroups" />
				<property name="created" />
			</display>
			<readonly>
				<property name="created" />
			</readonly>
		</editor>
		<select>
			<property name="code" />
		</select>
	</entity>
	
	<entity name="feature">
		<table action="append">
			<display>
				<property name="name" />
				<property name="description" />
				<property name="type" />
				<property name="sequence" />
			</display>
			<search>
				<property name="name" />
			</search>
		</table>
		<editor>
			<display>
				<property name="name" />
				<property name="description" />
				<property name="sequence" />
				<property name="type" />
				<property name="created" />
			</display>
			<readonly>
				<property name="created" />
			</readonly>
		</editor>
		<select>
			<property name="name" />
		</select>
	</entity>
	
	<entity name="featureValues">
		<table action="append">
			<display>
				<property name="feature.name" />
				<property name="value" />
			</display>
			<search>
				<property name="name" />
			</search>
		</table>
		<editor>
			<display>
				<property name="feature" />
				<property name="value" />
			</display>
		</editor>
	</entity>
	
</smc-definition>
