<?xml version="1.0" encoding="UTF-8"?>
<smc-definition xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="" xsi:schemaLocation="xmc.xsd">

	<entity name="warehouse">
		<table action="append">
			<display>
				<property name="name" />
				<property name="description" />
				<property name="precedence" />
			</display>
			<search>
				<property name="name" />
				<property name="description" />
			</search>
		</table>
		<editor>
			<display>
				<property name="name" />
				<property name="description" />
				<property name="precedence" />
				<property name="inventoryThreshold" />
				<property name="inventories"/>
				<property name="created" />
			</display>
			<readonly>
				<property name="created" />
			</readonly>
		</editor>
		<select>
			<property name="name" />
		</select>
	</entity>
	<entity name="inventory">
		<table action="append">
			<display>
				<property name="warehouse.name" />
				<property name="product.code" />
				<property name="available" />
				<property name="reserved" />
			</display>
			<search>
					<property name="warehouse.name" />
					<property name="product.code" />
				</search>
			
		</table>
		<editor>
			<display>
				<property name="warehouse" />
				<property name="product" />
				<property name="available" />
				<property name="reserved" />
				<property name="updated" />
			</display>
			<readonly>
				<property name="updated" />
			</readonly>
		</editor>
	</entity>
	
</smc-definition>